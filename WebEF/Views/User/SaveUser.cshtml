@model WebEF.Models.API.Persona;

@using (Html.BeginForm("Add", "User", FormMethod.Post))
{
    <form>
        <div class="form-group">
            
            <label>Nombres</label>
            <input class="form-control" name="Nombres" aria-describedby="emailHelp" placeholder="Nombres">
        </div>
        <div class="form-group">
            <label>Apellidos</label>
            <input class="form-control" name="Apellidos" placeholder="Apellidos">
        </div>
        
        <div class="form-group">
            <label>Tipo de documento</label>
            <select class="form-select" aria-label="Default select example" name="TipoDocumento">
                @foreach (var item in ViewBag.Documento)
                {
                    <option value="@item.IdDocumento">@item.Documento</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label >Numero de documento</label>
            <input  class="form-control" name="NroDocumento" placeholder="Numero de documento">
        </div>
        <div class="form-group">
            <label>Estado civil</label>
            <select class="form-select" aria-label="Default select example" name="EstadoCivil">
                @foreach (var civil in ViewBag.Civil){
                    <option value="@civil.IdEstadoCivil">@civil.EstadoCivil1</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label >Fecha de nacimiento</label>
            <input  class="form-control" name="FechaNacimiento" placeholder="Fecha de Nacimiento">
        </div>
        <div class="form-group">
            <label>Valor a ganar</label>
            <input class="form-control" name="ValorGanar" placeholder="Valor a Ganar">
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

}